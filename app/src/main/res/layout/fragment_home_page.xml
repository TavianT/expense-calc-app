<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageFragment">

    <ImageView
        android:id="@+id/linkedInLogo"
        android:layout_width="124dp"
        android:layout_height="111dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="LinkedIn button that takes you to my LinkedIn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/li_logo" />

    <ImageView
        android:id="@+id/githubLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Github button that takes you to my github"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/linkedInLogo"
        app:srcCompat="@drawable/gh_logo_white" />

    <Button
        android:id="@+id/createExpenseButton"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="68dp"
        android:text="CREATE EXPENSE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewExpensesButton"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="68dp"
        android:text="VIEW EXPENSES"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createExpenseButton" />

</androidx.constraintlayout.widget.ConstraintLayout>